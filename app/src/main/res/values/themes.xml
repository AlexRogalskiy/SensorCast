<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SensorCast" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/senbold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/senbold</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/senbold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Heading1Text">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/senbold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubHeadingText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/senregular</item>
    </style>

    <style name="Terminal">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/courier</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="ClickableBackground">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>